{
  "manifest_version": 2,
  "name": "chrome-extension-demo",
  "description": "A hello world chrome extension.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "my_chrome_extension",
    "default_popup": "dist/index.html"
  },
  "icons": {
      "48": "icon.png"
   },
  "permissions": [],
  "content_scripts":[{
    "js": [ "helloworld.js" ],
    "matches": [ "<all_urls>" ]
  }]
}
